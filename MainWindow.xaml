<Window
    x:Class="YourTimeApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YourTimeApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:YourTimeApp.Views"
    xmlns:vms="clr-namespace:YourTimeApp.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:HomeScreenViewModel}">
                <views:HomeScreenView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:CreateSessionViewModel}">
                <views:CreateSessionView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </Grid>
</Window>
